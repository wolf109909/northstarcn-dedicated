# Maintainer: pg9182 <96569817+pg9182@users.noreply.github.com>
pkgname=northstar
pkgver=1.6.3
pkgver_tf=2.0.11.0
pkgrel=0
pkgdesc="Northstar binaries and mods"

url="https://northstar.tf"
license="MIT"

arch="x86_64"
source="https://github.com/R2NorthstarCN/R2NorthstarCN_Launcher/releases/download/v${pkgver}/v${pkgver}.zip"

check() {
	ls "$srcdir"
	test -f "$srcdir/NorthstarLauncher.exe"
	test -f "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/cfg/autoexec_ns_server.cfg"
	test -f "$srcdir/bin/x64_dedi/d3d11.dll"
}

package() {
	rm "$srcdir"/*.zip
	rm -rf "$srcdir/bin/x64_retail"
	mkdir -p "$pkgdir/usr/lib/northstar"
	cp -r "$srcdir/." "$pkgdir/usr/lib/northstar/"
}

sha512sums="
bf4735efa81ed66e57d93046d56b40f735e30f4583c8f892c9ff7acf3c1704e61182883fd8c74a5f478a53541aafbf6b10963dfe245284fe2f87221dca3e5f21  v1.6.3.zip
"
